<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    layout_width="wrap_content"
    layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBFB"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/layerhead"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/green"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/img" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/search" />
            </LinearLayout>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/crime_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/layerhead">
        <LinearLayout
            android:id="@+id/layerbody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteX="20dp">

            <TextView
                android:id="@+id/crime_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="도박"
                android:textColor="@color/green"

                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:layout_marginTop="10dp"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1"
                    >
                    <TextView
                        android:id="@+id/word1"
                        android:gravity="center"
                        android:layout_height="match_parent"

                        android:text="꼬장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean1"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="노름방을 개설하는 한 마디로 개장주. \n하우스장이라고도 함."
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">

                    <TextView
                        android:id="@+id/word2"
                        android:gravity="center"
                        android:layout_height="match_parent"

                        android:text="분주꾼"
                        android:textSize="20sp" />

                    <TextView
                    android:id="@+id/word_mean2"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="노름방에서 돈 놀이를 하는 사람.\n분통이라고도 함."
                    android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">

                    <TextView
                        android:id="@+id/word3"
                        android:gravity="center"
                        android:text="대모"
                        android:layout_height="match_parent"

                        android:textSize="20sp" />

                    <TextView
                    android:id="@+id/word_mean3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="'꾼'을 불러들이고 '데라'도 뜯으며 \n판을 벌이는 사람."
                    android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word4"
                        android:gravity="center"
                        android:text="데라"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean4"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="도박 개장비."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word5"
                        android:gravity="center"
                        android:layout_height="match_parent"

                        android:text="콧구멍"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean5"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="확실하게 좋은 패가 아니면 게임에 \n아예 참여하지 않는 사람을 의미."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word6"
                        android:gravity="center"
                        android:layout_height="match_parent"

                        android:text="샤킹"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean6"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="공갈배팅을 유도하기 위한 제스쳐 \n좋은 패를 들고 안 좋은 패인 척 하는 행위."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word7"
                        android:gravity="center"
                        android:text="설계사"
                        android:layout_height="match_parent"

                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean7"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="구라를 꾸미는 사람.\nex) '타짜'의 정마담"
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word8"
                        android:gravity="center"
                        android:layout_height="match_parent"

                        android:text="컴일"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean8"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="천장에 카메라를 달아놓고 기계를 통해\n귓속의 도청장치에 카드내용을 불러주는 행위."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word9"
                        android:gravity="center"
                        android:text="된장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean9"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="도박 초보자를 의미."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word10"
                        android:gravity="center"
                        android:text="호구"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean10"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="돈 많고 어리석은 사람. '짐짝'이라고도 하는데 \n점찍어 물먹일 사람을 뜻합니다."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word11"
                        android:gravity="center"
                        android:text="구선생"
                        android:layout_height="match_parent"

                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean11"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="'호구'의 다른 말로 호구의 면전에서 비아냥거리며 \n그를 호칭할때 쓰는 말입니다."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word12"
                        android:gravity="center"
                        android:text="꽁짓돈"
                        android:layout_height="match_parent"

                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean12"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="도박판에서 빌려주는 고리대금."
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>