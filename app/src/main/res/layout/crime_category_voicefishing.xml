<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    layout_width="wrap_content"
    layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBFB"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/layerhead"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/green"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/img" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/search" />
            </LinearLayout>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/crime_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/layerhead">
        <LinearLayout
            android:id="@+id/layerbody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteX="20dp">

            <TextView
                android:id="@+id/crime_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="보이스피싱"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:id="@+id/word1"
                        android:gravity="center"
                        android:text="독장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean1"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="사용이력(이용이력)이 없는 계좌."
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">

                    <TextView
                        android:id="@+id/word2"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="공장"
                        android:textSize="20sp" />

                    <TextView
                    android:id="@+id/word_mean2"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="피해금액 인출 뒤 신고 되지 않아 \n재사용 준비 중인 계좌."
                    android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">

                    <TextView
                        android:id="@+id/word3"
                        android:gravity="center"
                        android:text="공동장"
                        android:textSize="20sp" />

                    <TextView
                    android:id="@+id/word_mean3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="여러 콜센터에서 같이 사용하는 대포 통장."
                    android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word4"
                        android:gravity="center"
                        android:text="세차장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean4"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="입.출금등 테스트가 완료된 범행 계좌."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word5"
                        android:gravity="center"
                        android:text="의뢰장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean5"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="인출 전용 계좌를 의미."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:layout_height="match_parent"
                        android:id="@+id/word6"
                        android:gravity="center"
                        android:text="출금장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean6"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="입.출금은 가능하나 다른 계좌로 \n 이체할 수 없는 계좌."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word7"
                        android:gravity="center"
                        android:text="달러장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean7"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="달러 이체 가능 계좌."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word8"
                        android:gravity="center"
                        android:text="앞장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean8"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="피해금을 받는 계좌."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word9"
                        android:gravity="center"
                        android:text="임뱅장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean9"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="인터넷뱅킹 가능 계좌."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word10"
                        android:gravity="center"
                        android:text="뒷장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean10"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="범행계좌로 장기적으로 사용 가능한 계좌."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word11"
                        android:gravity="center"
                        android:text="공상"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean11"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="중국 공상계좌."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word12"
                        android:gravity="center"
                        android:text="통카오"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean12"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="통장 체크카드 또는 OTP카드."
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>