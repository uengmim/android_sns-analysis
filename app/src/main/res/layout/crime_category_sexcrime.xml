<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    layout_width="wrap_content"
    layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBFB"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/layerhead"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/green"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_img"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/img" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_img"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/search" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/crime_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/layerhead">
        <LinearLayout
            android:id="@+id/layerbody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="20dp">

            <TextView
                android:id="@+id/crime_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="성범죄"
                android:textColor="@color/green"

                android:textSize="30sp"
                android:textStyle="bold"
                />
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1"
                    >
                    <TextView
                        android:id="@+id/word1"
                        android:gravity="center"
                        android:text="골뱅이"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean1"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="심신미약 여성 강간."
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">

                    <TextView
                        android:id="@+id/word2"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="고등어"
                        android:textSize="20sp" />

                    <TextView
                    android:id="@+id/word_mean2"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="미성년자."
                    android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">

                    <TextView
                        android:id="@+id/word3"
                        android:gravity="center"
                        android:text="조건"
                        android:textSize="20sp" />

                    <TextView
                    android:id="@+id/word_mean3"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="성매매, 성착취."
                    android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word4"
                        android:gravity="center"
                        android:text="최음제"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean4"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="마약, 강간 약물."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word5"
                        android:gravity="center"
                        android:text="간단"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean5"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="유사 성행위."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:layout_height="match_parent"
                        android:id="@+id/word6"
                        android:gravity="center"
                        android:text="완장"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean6"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="성 착취물 공유방 운영진."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word7"
                        android:gravity="center"
                        android:text="수양딸"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean7"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="성적 파트너."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word8"
                        android:gravity="center"
                        android:text="업스"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean8"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="치마 밑에서 사진을 찍는 행위."
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1">
                    <TextView
                        android:id="@+id/word9"
                        android:gravity="center"
                        android:text="우동"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/word_mean9"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="VR로 제작된 성인 컨텐츠."
                        android:textSize="16sp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>