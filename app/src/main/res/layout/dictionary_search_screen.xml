<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layerhead"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="username" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="황영합이당" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/seungminhead" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layerbody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/layerhead"
        tools:layout_editor_absoluteX="20dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            android:searchIcon="@drawable/ic_launcher_foreground"
            android:submitBackground="@drawable/ic_launcher_foreground"
            app:queryHint="검색어를 입력하세요."
            android:background="@drawable/border"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/layerbody2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@id/layerbody1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="어쩔티비"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mean1"
                        android:gravity="center"
                        android:text="어쩌라고 가서 티비나 봐"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/num1"
                        android:gravity="center"
                        android:text="16"
                        android:textSize="18sp" />
                    <Button
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:background="@drawable/heart"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num2"
                        android:gravity="center"
                        android:text="어쩌라고"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/word2"
                        android:gravity="center"
                        android:text="11"
                        android:textSize="18sp" />
                    <Button
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:background="@drawable/heart"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num3"
                        android:gravity="center"
                        android:text="대답하기 싫다는 뜻"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/word3"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="18sp" />
                    <Button
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:background="@drawable/heart"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num4"
                        android:gravity="center"
                        android:text="귀찮아"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/word4"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="18sp" />
                    <Button
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:background="@drawable/heart"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num5"
                        android:gravity="center"
                        android:text="저쩔티비"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/word5"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="18sp" />
                    <Button
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:background="@drawable/heart"/>
                </TableRow>
            </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layerbody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/layerbody2">

        <EditText
            android:id="@+id/upload"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="단어의 뜻을 입력하세요."
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="등록"
            android:background="@drawable/btn_sky"
            app:layout_constraintLeft_toRightOf="@+id/upload" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>