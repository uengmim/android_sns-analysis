<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layerhead"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="username" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="황영합이당" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/seungminhead" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layerbody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/layerhead"
        tools:layout_editor_absoluteX="20dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            android:searchIcon="@drawable/ic_launcher_foreground"
            android:submitBackground="@drawable/ic_launcher_foreground"
            app:queryHint="검색어를 입력하세요."
            android:background="@drawable/border"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/layerbody2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@id/layerbody1">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="left"
            android:padding="14dp"
            android:backgroundTint="@color/sky"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="조회가 많았던 키워드"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num1"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/word1"
                        android:gravity="center"
                        android:text="키워드1"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num2"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/word2"
                        android:gravity="center"
                        android:text="키워드2"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num3"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/word3"
                        android:gravity="center"
                        android:text="키워드3"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num4"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/word4"
                        android:gravity="center"
                        android:text="키워드4"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/num5"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/word5"
                        android:gravity="center"
                        android:text="키워드5"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:padding="14dp"
            android:backgroundTint="@color/sky"
            android:orientation="vertical"
            android:background="@drawable/border"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="추천이 많았던 키워드"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:gravity="right"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/number1"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/keyword1"
                        android:gravity="center"
                        android:text="키워드1"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/number2"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/keyword2"
                        android:gravity="center"
                        android:text="키워드2"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/number3"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/keyword3"
                        android:gravity="center"
                        android:text="키워드3"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/number4"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/keyword4"
                        android:gravity="center"
                        android:text="키워드4"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/number5"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/keyword5"
                        android:gravity="center"
                        android:text="키워드5"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layertail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layerbody2">

        <ImageView
            android:id="@+id/tailImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_5" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>