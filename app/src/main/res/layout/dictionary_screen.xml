<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layerhead"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/img" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/search" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layerbody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layerhead">
        <androidx.cardview.widget.CardView
            android:id="@+id/crime_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crime_container2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="조회가 많았던 키워드"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"/>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="*">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/num1"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/word1"
                                    android:gravity="center"
                                    android:text="키워드1"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/num2"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/word2"
                                    android:gravity="center"
                                    android:text="키워드2"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/num3"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/word3"
                                    android:gravity="center"
                                    android:text="키워드3"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/num4"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/word4"
                                    android:gravity="center"
                                    android:text="키워드4"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/num5"
                                    android:gravity="center"
                                    android:text="5"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/word5"
                                    android:gravity="center"
                                    android:text="키워드5"
                                    android:textSize="15sp" />
                            </TableRow>
                        </TableLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crime_container3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="추천이 많았던 키워드"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"
                            android:gravity="right"/>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="*">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/number1"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/keyword1"
                                    android:gravity="center"
                                    android:text="키워드1"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/number2"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/keyword2"
                                    android:gravity="center"
                                    android:text="키워드2"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/number3"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/keyword3"
                                    android:gravity="center"
                                    android:text="키워드3"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/number4"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/keyword4"
                                    android:gravity="center"
                                    android:text="키워드4"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/number5"
                                    android:gravity="center"
                                    android:text="5"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/keyword5"
                                    android:gravity="center"
                                    android:text="키워드5"
                                    android:textSize="15sp" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layertail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/layerbody1">
        <ImageView
            android:id="@+id/tailImage"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:contentDescription="@string/tailImg"
            android:elevation="10dp"
            android:src="@drawable/img_5"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>